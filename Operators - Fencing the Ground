#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int l;
    int b;
    scanf("%d\n%d",&l,&b);
    int perimeter=l*b;
    int area=2*(l+b);
    printf("The required length is %d m\n",area);
    printf("The required area of carpet is %d sqm",perimeter);
    
    return 0;
}
